<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView android:id="@+id/tablerow_song_albumart"
               android:src="@android:drawable/ic_menu_help"
               android:background="@color/colorAccent"
               android:layout_height="25pt"
               android:layout_width="25pt"
               android:layout_gravity="center_vertical"
               android:layout_marginTop="2.5pt"
               android:layout_marginLeft="5pt"
               android:layout_marginRight="5pt"
               android:layout_marginBottom="2.5pt"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView android:id="@+id/tablerow_song_title"
                  android:text="Title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="8pt"/>
        <TextView android:id="@+id/tablerow_song_artist"
                  android:text="Artist"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tablerow_song_album"
                  android:text="Album"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>